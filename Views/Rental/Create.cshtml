@{
}
@model CarRentalApp.Models.Rental

@{
    ViewData["Title"] = "Book Rental";
}

<h2>Book Rental</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Car</label>
        <select asp-for="CarId" class="form-control" asp-items="ViewBag.CarId"></select>
    </div>
    <div class="form-group">
        <label>Customer</label>
        <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
    </div>
    <div class="form-group">
        <label>Start Date</label>
        <input asp-for="StartDate" class="form-control" />
        
    </div>
    <div class="form-group">
        <label>End Date</label>
        <input asp-for="EndDate" type="date" class="form-control datepicker" />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Book</button>
</form>
