@model CarRentalApp.Models.Rental
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager


@{
    ViewData["Title"] = "Book Rental";
    var car = ViewBag.Car as CarRentalApp.Models.Car;

} 

<h2>Book Rental</h2>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="CustomerId" value="@ViewBag.CustomerId" />
    <input type="hidden" asp-for="CarId" value="@car?.Id" />

    

    <div class="form-group">
        <label>Car</label>
        <input type="text" class="form-control" value="@($"{car.Make} {car.Model}")" readonly />
    </div>
   @* <div class="form-group">
        <label>Customer</label>
        <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
    </div> *@
    <div class="form-group">
        <label>Start Date</label>
        <input asp-for="StartDate" class="form-control" />
        
    </div>
    <div class="form-group">
        <label>End Date</label>
        <input asp-for="EndDate" type="date" class="form-control datepicker" />
    </div>
    <div class="form-group">
    @if (SignInManager.IsSignedIn(User))
    {
        <button type="submit" class="btn btn-success">Book</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    }
       </div>
</form>
