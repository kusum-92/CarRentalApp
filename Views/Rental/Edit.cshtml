@{
}
@model CarRentalApp.Models.Rental

@{
    ViewData["Title"] = "Edit Rental";
}

<h2>Edit Rental</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="CarId" class="form-label"></label>
        <input asp-for="CarId" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="CustomerId" class="form-label"></label>
        <input asp-for="CustomerId" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="StartDate" class="form-label"></label>
        <input asp-for="StartDate" class="form-control" type="date" />
    </div>

    <div class="mb-3">
        <label asp-for="EndDate" class="form-label"></label>
        <input asp-for="EndDate" class="form-control" type="date" />
    </div>

    <div class="mb-3">
        <label asp-for="TotalCost" class="form-label"></label>
        <input asp-for="TotalCost" class="form-control" />
    </div>

    <div class="mb-3 form-check">
        <input asp-for="Status" class="form-check-input" />
        <label asp-for="Status" class="form-check-label">Active?</label>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
