@{
}
@model IEnumerable<CarRentalApp.Models.Customer>

@{
    ViewData["Title"] = "Customers";
}

<h2>Customer List</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Add New Customer</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>License Number</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Name</td>
                <td>@c.Email</td>
                <td>@c.Phone</td>
                <td>@c.LicenseNumber</td>
                <td>
                    <a class="btn btn-sm btn-info" asp-action="Edit" asp-route-id="@c.Id">Edit</a>
                    <a class="btn btn-sm btn-secondary" asp-action="Details" asp-route-id="@c.Id">Details</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@c.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
