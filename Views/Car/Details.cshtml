@{
}
@model CarRentalApp.Models.Car

@{
    ViewData["Title"] = "Car Details";
}

<h2>Car Details</h2>

<div class="card">
    <div class="card-body">
        <h4>@Model.Make @Model.Model (@Model.Year)</h4>
        <p><strong>License Plate:</strong> @Model.LicensePlate</p>
        <p><strong>Daily Rate:</strong> @Model.DailyRate</p>
        <p><strong>Available:</strong> @(Model.IsAvailable ? "Yes" : "No")</p>
    </div>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>
