@{
}
@model CarRentalApp.Models.Car

@{
    ViewData["Title"] = "Add Car";
}

<h2>Add Car</h2>

<form asp-action="Create" method="post" class="form">
    <div class="mb-3">
        <label asp-for="Make" class="form-label"></label>
        <input asp-for="Make" class="form-control" />
        <span asp-validation-for="Make" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Model" class="form-label"></label>
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Year" class="form-label"></label>
        <input asp-for="Year" class="form-control" />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="LicensePlate" class="form-label"></label>
        <input asp-for="LicensePlate" class="form-control" />
        <span asp-validation-for="LicensePlate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DailyRate" class="form-label"></label>
        <input asp-for="DailyRate" class="form-control" />
        <span asp-validation-for="DailyRate" class="text-danger"></span>
    </div>

    <div class="mb-3 form-check">
        <input asp-for="IsAvailable" class="form-check-input" />
        <label asp-for="IsAvailable" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
