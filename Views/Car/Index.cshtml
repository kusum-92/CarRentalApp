@{
}
@model IEnumerable<CarRentalApp.Models.Car>

@{
    ViewData["Title"] = "Cars";
}

<h2>Car List</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Add New Car</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Make</th>
            <th>Model</th>
            <th>Year</th>
            <th>License Plate</th>
            <th>Daily Rate</th>
            <th>Available</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model)
        {
            <tr>
                <td>@car.Make</td>
                <td>@car.Model</td>
                <td>@car.Year</td>
                <td>@car.LicensePlate</td>
                <td>@car.DailyRate</td>
                <td>
                    @if (car.IsAvailable)
                    {
                        <span class="badge bg-success">Yes</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">No</span>
                    }
                </td>
                <td>
                    <a class="btn btn-sm btn-info" asp-action="Edit" asp-route-id="@car.Id">Edit</a>
                    <a class="btn btn-sm btn-secondary" asp-action="Details" asp-route-id="@car.Id">Details</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@car.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
